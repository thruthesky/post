<?php

use Drupal\post\Post;
use Drupal\library\Library;

function post_theme()
{
    return [
        'post.index' => [
            'variables' => [ 'data' => null ],
            'template' => 'post.index'
        ],
        'post.list' => [
            'variables' => [ 'data' => null ],
            'template' => 'post.list'
        ],
        'post.edit' => [
            'variables' => [ 'data' => null ],
            'template' => 'post.edit'
        ],
        'post.view' => [
            'variables' => [ 'data' => null ],
            'template' => 'post.view'
        ],
    ];
}

function post_preprocess( &$variables, $hook )
{
    debug_log("post_preprocess($hook) begins");
    if ( post::isPostPage() ) {
        $variables['#attached']['library'][] = 'post/default';
    }
}
