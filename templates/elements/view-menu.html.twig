
<a href="/post/{{ config.name.value }}/add"><span class="button">{{ ko ? '글쓰기' : 'POST UPLOAD' }}</span></a>
<a href="/post/{{ config.label }}"><span class="button">{{ ko ? '목록' : 'LIST' }}</span></a>

{% if is_post_admin or post.user_id.target_id == myUid %}
    <a href="/post/{{ config.label }}/edit/{{ post.id.value }}"><span class="button">{{ ko ? '수정' : 'EDIT' }}</span></a>
    <a href="/post/{{ config.label }}/delete/{{ post.id.value }}" onclick="return confirm('{{ ko ? '정말 삭제하시겠습니까?' : 'Are you sure you want to delete?' }}');"><span class="button">{{ ko ? '삭제' : 'DELETE' }}</span></a>
{% endif %}

{% if is_post_admin %}
    <a href="/post/{{ config.label }}/force/delete/{{ post.id.value }}" onclick="return confirm('{{ ko ? '정말 삭제하시겠습니까?' : 'Are you sure you want to delete?' }}');">
        <span class="button">{{ ko ? '강제삭제' : 'Force Delete Thread'}}</span>
    </a>
{% endif %}

{% set p = post %}
{% include dir_post_templates ~ '/elements/vote.html.twig' %}
{% include dir_post_templates ~ '/elements/report.html.twig' %}